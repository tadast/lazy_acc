<h1>New transaction</h1>

<% form_for(@transaction, :url => {:action => :create}) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :bucket_id %><br />
    <%= f.select :bucket_id, current_user.buckets.map{ |x| [x.title, x.id]} %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', transactions_path %>