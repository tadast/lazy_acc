<h1>Bills for this month</h1>

<table>
  <tr style="text-align: center;">
    <th>Bucket</th>
    <th>Title</th>
    <th>Description</th>
    <th>Amount</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Periodicity</th>
  </tr>

<% @bills.each do |bill| %>
  <tr>
    <td><%=h bill.bucket.try(:title) %></td>
    <td><%=h bill.title %></td>
    <td><%=h bill.description %></td>
    <td><%=h bill.amount %></td>
    <td><%=l bill.start_date, :format => :long %></td>
    <td><%=l bill.end_date, :format => :long %></td>
    <td><%=h bill.periodicity %></td>
    <td><%= link_to 'Show', bill %></td>
    <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
    <td><%= link_to 'Destroy', bill, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

