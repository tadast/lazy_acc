<h1>New bill</h1>

<% form_for(@bill) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :bucket_id %><br />
    <%= f.select :bucket_id, current_user.buckets.map{ |x| [x.title, x.id]} %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description, "Short description" %><br />
    <%= f.text_area :description, :rows => 4 %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :start_date, "Validity epriod" %><br />
    <%= f.datetime_select :start_date %>
  </p>
  <p>
    <%= f.datetime_select :end_date %>
  </p>
  <!-- <p>
    <%= f.label :periodicity %><br />
    <%= f.text_field :periodicity %>
  </p> -->
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', bills_path %>