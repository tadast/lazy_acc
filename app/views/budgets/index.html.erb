<h1>Listing budgets</h1>

<table>
  <tr>
    <th>Amount</th>
    <th>Bucket</th>
    <th>Valid from</th>
    <th>Valid to</th>
  </tr>

<% @budgets.each do |budget| %>
  <tr>
    <td><%=h budget.amount %></td>
    <td><%=h budget.bucket_id %></td>
    <td><%=h budget.valid_from %></td>
    <td><%=h budget.valid_to %></td>
    <td><%= link_to 'Show', budget %></td>
    <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
    <td><%= link_to 'Destroy', budget, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New budget', new_budget_path %>